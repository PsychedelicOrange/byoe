#version 410 core
layout (location = 0) in vec2 aPos;

uniform mat4 view;
uniform mat4 projection;
out vec4 nearp;
out vec4 farp;

void main()
{
	vec4 position = vec4(aPos,0,1);
	gl_Position = position;
	vec2 pos = gl_Position.xy/gl_Position.w;
	//pos = gl_Position.xy;
	nearp = inverse(projection * view) * vec4(pos,-1,1);
	farp = inverse(projection * view) * vec4(pos,1,1);
}
	
